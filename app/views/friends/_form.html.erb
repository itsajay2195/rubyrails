<%= form_with(model: friend, local: true) do |form| %>
  <% if friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :first_name, class:'col-sm-2 col-form-label' %>
    <%= form.text_field :first_name , placeholder:'First name'%>
  </div>

  <div class="form-group row">
    <%= form.label :last_name, class:'col-sm-2 col-form-label'%>
    <%= form.text_field :last_name  , placeholder:'Last name'%>
  </div>

  <div class="form-group row">
    <%= form.label :email, class:'col-sm-2 col-form-label'%>
    <%= form.text_field :email , placeholder:'email'%>
  </div>

  <div class="form-group row">
    <%= form.label :phone_number, class:'col-sm-2 col-form-label' %>
    <%= form.text_field :phone_number, placeholder:'Phone Number' %>
  </div>

  <div class="form-group row">
    <%= form.label :twitter, class:'col-sm-2 col-form-label' %>
    <%= form.text_field :twitter,placeholder:'twitter' %>
  </div>

  <div class="form-group row">
    <%= form.text_field :user_id,placeholder:'user id',id: :friend_user_id,value:current_user.id, type: :hidden %>
  </div>

  

  <div class="actions">
    <%= form.submit class:'btn btn-secondary'%>
  </div>
  <br></br>
<% end  %>
